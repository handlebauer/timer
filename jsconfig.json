{
  "compilerOptions": {
    "checkJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "target": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "noEmit": false,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
